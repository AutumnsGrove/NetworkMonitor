{
  "manifest_version": 2,
  "name": "Network Monitor - Domain Tracker",
  "version": "0.1.0",
  "description": "Tracks active tab domains for Network Monitor application",

  "permissions": [
    "tabs",
    "http://localhost/*",
    "https://localhost/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "network-monitor@local",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
